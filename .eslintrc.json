{
    "env": {
	"browser": true,
        "es2016": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
	"indent": [
            "error",
            "tab"
        ],
	"linebreak-style": [
            "error",
            "unix"
        ],
	"quotes": [
            "error",
            "single"
        ],
	"semi": [
            "error",
            "always"
        ]
    }
}
